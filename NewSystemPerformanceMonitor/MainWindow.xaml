<Window x:Class="PerformanceMonitorApp.PerformanceMonitorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Performance Monitor" 
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Black"
        Opacity="0.7"
        Top="0"
        Left="0"
        WindowStartupLocation="Manual"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        ShowInTaskbar="false"
        IsHitTestVisible="False">
    <TextBlock x:Name="PerformanceTextBlock"
               FontFamily="pack://application:,,,/Resources/ProggySmall.ttf#ProggySmallTT"
               FontSize="16"
               Foreground="White"
               Padding="5"
               TextWrapping="Wrap"
               IsHitTestVisible="False"
               Text="Loading..."/>
</Window>
